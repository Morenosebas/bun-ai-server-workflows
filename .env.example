# Server Configuration
PORT=3000

# API Authentication (for clients consuming this service)
# Generate a secure random string for production
API_KEY=your_secure_api_key_here

# AI Service API Keys
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# Get your API key from: https://inference.cerebras.ai/
CEREBRAS_API_KEY=csk_your_cerebras_api_key_here

# Get your API key from: https://enter.pollinations.ai
# Optional - Pollinations has free tier without API key
POLLINATIONS_API_KEY=sk_your_pollinations_api_key_here

# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Additional AI Services (for future expansion)
# OPENAI_API_KEY=sk-your_openai_api_key_here
# ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Service Configuration
MAX_RETRIES=3
BASE_DELAY_MS=500
MAX_DELAY_MS=5000

# Redis Configuration (for workflow persistence)
# Comment out to use in-memory storage (workflows lost on restart)
# Workflows are stored for 1 week (604800 seconds) by default
REDIS_URL=redis://localhost:6379

# Workflow Configuration
WORKFLOW_MAX_CONCURRENT=5              # Max simultaneous workflows
WORKFLOW_STEP_TIMEOUT_MS=120000        # Timeout per step (2 min)
WORKFLOW_TOTAL_TIMEOUT_MS=300000       # Total timeout (5 min)
WORKFLOW_RESULT_TTL_SECONDS=604800     # Results TTL (1 week)